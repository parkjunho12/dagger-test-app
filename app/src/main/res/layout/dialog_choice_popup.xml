<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/elevation_background"
        >
        <TextView
            android:id="@+id/choice_popup_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text = "타이틀"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imagePopup"
            android:layout_marginTop="20dp"
            android:src="@drawable/no_image"
            android:background="@drawable/elevation_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/choice_popup_title"
            android:layout_width="250dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/videoTimePopup"
            tools:text="03:00"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/imagePopup"
            app:layout_constraintStart_toStartOf="@id/imagePopup"
            android:alpha="0.8"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="10sp"
            android:padding="2dp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/authorPopup"
            tools:text="Youtube. KBSPopup"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/imagePopup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dateTimePopup"
            tools:text="2021.10.21"
            app:layout_constraintTop_toBottomOf="@id/authorPopup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/popupIconLin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateTimePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sharePopupBtn"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_baseline_share_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/openBrowserBtn"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_baseline_open_in_browser_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/choice_popup_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/popupIconLin"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text ="내 보관함에 추가 하시겠습니까?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/choice_popup_lin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/choice_popup_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/popupCancelBtn"
                android:text="아니요"
                android:textColor="@color/white"
                android:background="@drawable/negative_background"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="6dp"
                android:layout_width="96dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/popupOkBtn"
                android:text="네"
                android:layout_marginStart="6dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/positive_background"
                android:layout_width="96dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <View
            app:layout_constraintTop_toBottomOf="@id/choice_popup_lin"
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>